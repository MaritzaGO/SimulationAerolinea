<p id="notice"><%= notice %></p>

<h1>Listado de Rutas</h1>

<table>
  <thead>
    <tr>
      <th>Ciudad de origen</th>
      <th>Ciudad de destino</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.city_o.name_city %></td>
        <td><%= route.city_y.name_city %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Ruta', new_route_path %>
